<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="index_log-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :count %>
    <%= number_input f, :count %>
    <%= error_tag f, :count %>

    <%= label f, :remarks %>
    <%= textarea f, :remarks %>
    <%= error_tag f, :remarks %>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
